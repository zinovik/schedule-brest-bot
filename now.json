{
  "version": 2,
  "env": {
    "IS_NOW": "true",
    "ICE_CHANNEL_ID": "@ice-channel-id",
    "DVVS_CHANNEL_ID": "@dvvs-channel-id",
    "REDIS_URL": "@redis-url",
    "TOKEN": "@token"
  },
  "builds": [
    {
      "src": "./src/**/*.ts",
      "use": "@now/node-server",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/src/lambda/$1" },
    { "src": "/(.*)", "dest": "/src/lambda/hello" }
  ]
}